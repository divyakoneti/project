<div class="container">
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  
  
  <div class="form-group">
    <%= f.label :Email ,class: "control-label" %>
    <%= f.email_field :email, required: true, autofocus: true,class: "form-control" %>
  </div>
  <div class="form-group">  
    <%= f.label :password ,class: "control-label" %>
    <%= f.text_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),class: "form-control" %>
  </div> 
  <div class="form-group">  
     <%= f.label :password_confirmation ,class: "control-label" %>
    <%= f.text_field :password_confirmation, required: true ,class: "form-control"%>
  </div>
  

  <div class="form-actions">
    <%= f.button :submit, "Sign up",class: "btn btn-primary" %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>
</div>
